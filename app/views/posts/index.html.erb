<h1>Listar Eventos</h1>

<table>
  <tr>
    <th>Nombre evento</th>
    <th>Descripcion</th>
    <th>Fecha</th>
    <th>Hora</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.nombre_evento %></td>
    <td><%= post.descripcion %></td>
    <td><%= post.fecha %></td>
    <td><%= post.hora %></td>
    <td><%= link_to 'Mostrar', post %></td>
    <td><%= link_to 'Editar', edit_post_path(post) %></td>
    <td><%= link_to 'Eliminar', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Evento', new_post_path %>
<%= link_to "RSS Feed", posts_url(:rss) %>
